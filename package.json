{
  "name": "explore-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "This is a complete monorepo example using NestJS, React, CQRS pattern, and Turborepo.",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter=@app/api-*",
    "dev:frontend": "turbo run dev --filter=@app/frontend",
    "build": "turbo run build",
    "build:api": "turbo run build --filter=@app/api-*",
    "build:frontend": "turbo run build --filter=@app/frontend",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build --no-cache",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:ps": "docker-compose ps",
    "docker:clean": "docker-compose down -v --rmi all",
    "docker:logs:api": "docker-compose logs -f api-gateway auth-service",
    "docker:logs:frontend": "docker-compose logs -f frontend",
    "docker:logs:db": "docker-compose logs -f db redis clickhouse",
    "docker:exec:api": "docker-compose exec api-gateway sh",
    "docker:exec:db": "docker-compose exec db mysql -u root -p",
    "docker:migrate": "docker-compose run --rm atlas migrate apply",
    "docker:seed": "docker-compose exec api-gateway npm run db:seed",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "storybook": "turbo run storybook --filter=@app/frontend"
  },
  "keywords": ["monorepo", "nestjs", "react", "cqrs", "turborepo"],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.6.1",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,css,scss}": ["prettier --write"]
  }
}